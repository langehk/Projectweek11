extends layout

block content
    div(id="loans")
        h3 Your loans:
    
        each book, loan in lentbooks
            p(class="lentbooks") #{book.title}
            a(href="/library/return/" + loans[loan]._id)
                Button Return book

    div(id="reservations")
        h3 Your reservations
        each book in reservedbooks 
            p(class="reservedbooks") #{book.title}